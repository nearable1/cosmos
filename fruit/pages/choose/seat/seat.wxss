/*黑板*/
.blackboard {
  width:100%;
  position:relative;
  background-color:white;
  z-index: 1;
}
/*讲台的view*/
.platview {
  position:relative;
  width:100%;
  background-color:white;
  white-space: nowrap;
  z-index:1;
}
/*讲台*/
.platform {
  width: 250rpx;
  height: 70rpx;
  text-align: center;
  display: inline-block;
  padding-top: 2%;
  border:1rpx solid gray;
}
.seatNext {
  width: 125rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-top:1rpx solid gray;
  border-bottom:1rpx solid gray;
  text-align: center;
  margin-top: 60rpx;
  display: inline-block;
  line-height: 60rpx;
  vertical-align: bottom;
}

.seatSide {
  width: 125rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: bottom;
}

.seat {
  float:left;
  width: 125rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-top:1rpx solid gray;
  border-bottom:1rpx solid gray;
  border-left:1rpx solid gray;
  text-align: center;
  line-height:60rpx;
  margin-top: 10rpx;
  z-index: -1;
}

.scroll-view-item{
  width:340%;
}

