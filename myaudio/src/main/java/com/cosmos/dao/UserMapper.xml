<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cosmos.dao.UserDao">
	
	<!-- 根据种类获取音乐文件 -->	
	<select id="getAudio" parameterType="String" resultType="com.cosmos.entity.Sound">
		select id,type,path,name,post,author from myaudio where type=#{0}
	</select>
	
	<!-- 获取种类的个数 -->	
	<select id="getTypes" resultType="String">
		select distinct type from myaudio
	</select>

</mapper>