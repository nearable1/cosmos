<form bindsubmit="formSubmit" bindreset="formReset">

  <view class="section">
    <!--<view class="section_self">self</view>-->
    <input class="self" name="self" placeholder="请输入自己电话"/>
  </view>

  <view class="section">
    <!--<view class="section_target">target</view>-->
    <input class="target" name="target" placeholder="请输入对方电话"/>
  </view>

  <view class="btn-area">
    <button class="submit" formType="submit">提交</button>
    <button class="reset" formType="reset">重置</button>
  </view>
</form>
